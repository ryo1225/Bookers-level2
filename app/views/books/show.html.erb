<html lang="en">
<head>
  <title>Bootstrap Case</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>




<div class="container">

		<div class="row">
			<div class="col-xs-3">


				<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>


				<h2>User info</h2>



					<table class="table">
					  <tbody>
						<tr>
							<th>name</th>
							
						</tr>
						<tr>
							<th>introduction</th>
							<th></th>
						</tr>
					  </tbody>
					</table>



				<h2>New Book</h2>
					<%= form_for(@book) do |f| %>

						<p>Title</p>
						<%= f.text_field :title %>

						<p>Body</p>
						<%= f.text_area :body %>

				<input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-7" data-disable-with="Create Book" />
					<% end %>

			</div>


		<h2>Books detail</h2>
			<div class="col-xs-9">
			<table class="table">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th></th>
					</tr>
				</thead>
				<tbody>

					<tr>
						<th>アイコン</th>
						<td><%= @book.title %></td>
						<td><%= @book.body %></td>
						<td>
						<%= link_to 'edit', edit_book_path, class:"btn-sm btn-success" %>
						
						<td>

							<%= link_to 'destroy', books_path(@book), method: :delete, class:"btn-sm btn-danger destroy_book" %>
							
						</td>

				</tbody>


			</table>
			</div>
		</div>


</div><!--conteiner-->

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

</body>
</html>






